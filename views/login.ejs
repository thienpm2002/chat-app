<%- include('./partials/header') %>




<div class="container">
    <div class="left">
         <div class="left-content">
           <h1>Sign in</h1>
           <form class="formLogin" action="/login" method="POST">
              <input type="email" placeholder="Email" id="email" name="email" class="input-login">
              <input type="password" placeholder="Password" id="password" name="password" class="input-login">
              <button type="submit" class="btn-login">SIGN IN</button>
           </form>
         </div>
    </div>

    <div class="right">
        <div class="right-content">
            <h1>Hello, Friend</h1>
            <p>Enter your personal details and start journey with us</p>
            <a href="/register"><button class="btn-register">SIGN UP</button></a>
        </div>
    </div>

</div>




    
</body>
</html>